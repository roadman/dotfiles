# User specific aliases and functions

alias rerc="source $HOME/.bashrc"
alias screen="screen -d -R -U"
alias setdate="sudo ntpdate ntp.nict.jp"
alias vi=`which vim`
alias lsl="ls -l"
alias lsa="ls -lta"
alias his="history"

## yum
alias yumls="yum list installed"

alias cwp="chatwork-cmd post-mes"

#capistrano (3.1.0, 2.15.5)
alias cap2="cap _2.15.5_"
alias cap3="cap _3.1.0_"

# luarocks
alias luarocks="luarocks --local"
